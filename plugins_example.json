{
    "python": {
        "plugin_name": "python",
        "version": "latest",
        "post_install": [
            "python -m pip install -U pip setuptools",
            "python -m pip install --user --force-reinstall pipx trash-cli pynvim",
            "python -m pipx ensurepath",
            "python -m pipx install --python $HOME/.asdf/shims/python argcomplete",
            "python -m pipx install --python $HOME/.asdf/shims/python poetry",
            "python -m pipx install --python $HOME/.asdf/shims/python sphinx",
            "python -m pipx inject sphinx sphinx_rtd_theme",
            "python -m pipx install --python $HOME/.asdf/shims/python 'python-lsp-server[all]'",
            "python -m pipx inject python-lsp-server pylsp-mypy python-lsp-black pyls-isort",
            "python -m pipx install --python $HOME/.asdf/shims/python neovim-remote"
        ],
        "set_global": true
    },
    "python39": {
        "plugin_name": "python",
        "version": "3.9.13",
        "post_install": [
            "python -m pip install -U pip setuptools"
        ]
    },
    "jupyter": {
        "plugin_name": "python",
        "version": "latest",
        "post_install": [
            "python -m pip install -U pip setuptools",
            "python -m pip install --user -U pipx",
            "python -m pipx ensurepath",
            "python -m pipx install -f jupyterlab",
            "python -m pipx inject jupyterlab ipywidgets jupyterlab-widgets nodejs",
            "python -m pipx inject jupyterlab jupyterlab-system-monitor lckr-jupyterlab-variableinspector",
            "python -m pipx inject jupyterlab jupyterlab-vim jupyterlab-vimrc",
            "python -m pipx inject jupyterlab jupyterlab-lsp jupyterlab-code-formatter",
            "python -m pipx inject jupyterlab 'python-lsp-server[all]'",
            "python -m pipx inject jupyterlab pylsp-mypy python-lsp-black pyls-isort",
            "ln -sf $HOME/.local/pipx/venvs/jupyterlab/bin/jupyter $HOME/.local/bin/jupyter"
        ],
        "force_post_install": true
    },
    "miniconda": {
        "plugin_name": "python",
        "version": "miniconda3-latest",
        "post_install": [
            "conda config --add channels intel",
            "conda config --append channels conda-forge",
            "conda config --append channels bioconda",
            "conda config --remove channels defaults",
            "conda install -y conda pip setuptools"
        ],
        "set_global": false
    },
    "nodejs": {
        "plugin_name": "nodejs",
        "version": "17.9.0",
        "post_install": [
            "npm install -g neovim"
        ],
        "set_global": true
    },
    "deno": {
        "plugin_name": "deno",
        "version": "latest",
        "set_global": true
    },
    "rust": {
        "plugin_name": "rust",
        "version": "latest",
        "post_install": [
            "cargo install cargo-update cargo-edit",
            "cargo install-update -a"
        ],
        "set_global": true
    },
    "go": {
        "plugin_name": "golang",
        "version": "latest",
        "post_install": [
            "go install github.com/cpuguy83/go-md2man/v2@latest"
        ],
        "set_global": true
    },
    "ghq": {
        "plugin_name": "ghq",
        "version": "latest",
        "post_install": [
        ]
    }
}
